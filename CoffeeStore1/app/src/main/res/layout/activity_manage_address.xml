<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mine_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99d5d5d5"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:scrollbars="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99d5d5d5"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <!-- 全圆角-->
            <LinearLayout android:id="@+id/userInfo_tag"
                android:orientation="horizontal"
                android:layout_height="110dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:padding="1px"
                android:background="@drawable/bg_layout_shape"
                android:baselineAligned="false">
                <ImageView android:id="@+id/userInfo_tag_Icon"
                    android:layout_gravity="center|left"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:paddingTop="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/m18_2"/>
                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:orientation="vertical">
                    <TextView android:id="@+id/info_phone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:paddingBottom="8dp"
                        android:textSize="25sp"
                        android:singleLine="true"
                        android:textColor="#100f0f"
                        android:text="好东软"/>
                    <View style="@style/bg_line"
                        android:gravity="center"
                        android:paddingBottom="10dp"/>
                    <TextView android:id="@+id/info_motto"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingTop="8dp"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:text="个性签名"/>
                </LinearLayout>

            </LinearLayout>
            <!-- 全圆角-->
            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    style="@style/single_layout"
                    android:id="@+id/lay_tongzhigonggao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="通知公告"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp"
                        android:id="@+id/textView3"/>

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

            </LinearLayout>
            <!-- w我的作业-->
            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    style="@style/single_layout"
                    android:layout_width="match_parent"
                    android:id="@+id/lay_xuexiguiji">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的作业"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout style="@style/wrap_layout">
                <!-- 上圆角-->
                <LinearLayout
                    style="@style/single_layout"
                    android:layout_width="match_parent"
                    android:id="@+id/lay_longhubang">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="龙虎榜"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>
                <!-- 分割线 -->
                <View style="@style/img_arrow" />

            </LinearLayout>
            <!-- 特长辅导-->
            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    style="@style/single_layout"
                    android:layout_width="match_parent"
                    android:id="@+id/lay_techangfudao">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="特长辅导"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout style="@style/wrap_layout"
                android:visibility="gone">
                <!-- 上圆角-->

                <!-- 上圆角-->
                <LinearLayout
                    style="@style/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lay_jiaoziyoufang">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="优秀作文赏析"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>
                <!-- 分割线 -->
                <View style="@style/bg_line" />
                <!-- 下圆角-->
                <LinearLayout
                    style="@style/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lay_haoshutuijian">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="好书推荐(学生版)"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>
                <!-- 分割线 -->
                <View style="@style/bg_line" />
                <!-- 下圆角-->
                <LinearLayout
                    style="@style/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/duhougan">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="读后感"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/wrap_layout">
                <!-- 上圆角-->
                <LinearLayout
                    style="@style/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lay_bibeigushicimulu">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="必背古诗词目录"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>
                <!-- 分割线 -->
                <View style="@style/bg_line" />
                <!-- 下圆角-->
                <View style="@style/bg_line" />
                <!-- 下圆角-->
                <LinearLayout
                    style="@style/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tuozhangushicimulu">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="拓展古诗词目录"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/wrap_layout">

                <LinearLayout style="@style/single_layout"
                              android:id="@+id/lay_gerenshezhi"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="个人设置"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

            </LinearLayout>



            <!-- 全圆角-->
            <LinearLayout style="@style/wrap_layout">

                <LinearLayout style="@style/single_layout"
                    android:id="@+id/feedback_tag">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="帮助与反馈"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    style="@style/single_layout"
                    android:id="@+id/student_exit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="退出"
                        android:textColor="@color/text_clo"
                        android:textSize="16dp"
                        android:id="@+id/poweroff"/>

                    <ImageView style="@style/img_arrow"
                        android:src="@drawable/power_48px"
                        android:layout_marginRight="-10dp"
                        android:paddingRight="1dp"
                        android:layout_height="23dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>